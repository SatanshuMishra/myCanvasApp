<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">


        <TextView
            android:id="@+id/textView_appearance"
            android:layout_width="411dp"
            android:layout_height="48dp"
            android:layout_marginTop="121dp"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:text="Appearance"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_status" />

        <TextView
            android:id="@+id/textView_appearance2"
            android:layout_width="411dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:text="Reset Data"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_help" />

        <TextView
            android:id="@+id/textView_help"
            android:layout_width="411dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:text="Help"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_appearance" />

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="238dp"
            android:layout_height="35dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="52dp"
            android:text="Name"
            app:layout_constraintStart_toEndOf="@+id/imageView_profilePicture"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_contact"
            android:layout_width="238dp"
            android:layout_height="35dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="2dp"
            android:text="Email / Phone"
            app:layout_constraintStart_toEndOf="@+id/imageView_profilePicture"
            app:layout_constraintTop_toBottomOf="@+id/textView_name" />

        <TextView
            android:id="@+id/textView_status"
            android:layout_width="238dp"
            android:layout_height="35dp"
            android:layout_marginStart="28dp"
            android:text="Status"
            app:layout_constraintStart_toEndOf="@+id/imageView_profilePicture"
            app:layout_constraintTop_toBottomOf="@+id/textView_contact" />

        <Button
            android:id="@+id/button_editProfile"
            android:layout_width="109dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Edit Profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_profilePicture" />

        <ImageView
            android:id="@+id/imageView_profilePicture"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>