<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="40px"
        android:paddingHorizontal="60px"
        android:orientation="vertical"
        android:background="@drawable/create_goal_popup_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your goal"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginVertical="30px"/>

        <EditText
            android:id="@+id/goal_field"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginVertical="30px"
            android:background="@drawable/rounder_edit_text"
            android:drawablePadding="10px"
            android:paddingHorizontal="40px"
            android:paddingVertical="20px"
            android:text="My goal is..."
            android:textColor="#808080"
            android:textSize="15dp"
            tools:ignore="TouchTargetSizeCheck" />
        <Button
            android:id="@+id/select_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:drawableEnd="@drawable/ic_baseline_calendar_month_24"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="12dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD GOAL"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>